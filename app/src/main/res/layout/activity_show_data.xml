<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cookie_apps.myseniorapp1.ShowDataActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_above="@+id/actionbar"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionbar">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhiteAlpha80"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/sw_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/img"
                    android:background="@color/colorWhiteAlpha80"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/sizeX192"
                        android:layout_height="wrap_content">

                        <com.cookie_apps.myseniorapp1.MyClass.SquareImageView
                            android:id="@+id/img1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/no_image"/>

                        <com.cookie_apps.myseniorapp1.MyClass.SquareImageView
                            android:id="@+id/img1_selector"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/stroke_primary"
                            android:visibility="gone"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/clock"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/sizeX192"
                        android:layout_height="wrap_content">

                        <com.cookie_apps.myseniorapp1.MyClass.SquareImageView
                            android:id="@+id/img2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/no_image"/>

                        <com.cookie_apps.myseniorapp1.MyClass.SquareImageView
                            android:id="@+id/img2_selector"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/stroke_primary"
                            android:visibility="gone"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/clock"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/sizeX192"
                        android:layout_height="wrap_content">

                        <com.cookie_apps.myseniorapp1.MyClass.SquareImageView
                            android:id="@+id/img3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/no_image"/>

                        <com.cookie_apps.myseniorapp1.MyClass.SquareImageView
                            android:id="@+id/img3_selector"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/stroke_primary"
                            android:visibility="gone"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/clock"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/sizeX192"
                        android:layout_height="wrap_content">

                        <com.cookie_apps.myseniorapp1.MyClass.SquareImageView
                            android:id="@+id/img4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/no_image"/>

                        <com.cookie_apps.myseniorapp1.MyClass.SquareImageView
                            android:id="@+id/img4_selector"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/stroke_primary"
                            android:visibility="gone"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/clock"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/txtBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"
                android:drawableRight="@drawable/border_color"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/txtModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"
                android:drawableRight="@drawable/border_color"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/txtReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/txtCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/txtBuilding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"
                android:drawableRight="@drawable/border_color"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/txtCheckDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/txtUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sizeX8"
                android:textSize="@dimen/fontMedium"
                android:drawableRight="@drawable/border_color"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/sizeX80"
                android:background="@color/colorWhite"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/sizeX8">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/navigation_back"/>

        <TextView
            android:id="@+id/actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sizeX8"
            android:layout_marginRight="@dimen/sizeX8"
            android:layout_toLeftOf="@+id/txtEdit"
            android:layout_toRightOf="@+id/btnBack"
            android:singleLine="true"
            android:text="กำลังโหลดข้อมูล..."
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontLarge"/>

        <TextView
            android:id="@+id/txtEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sizeX8"
            android:text="บันทึกข้อมูล"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontMedium"/>
    </RelativeLayout>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_camera_alt"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_colorRipple="@color/colorPrimaryDark"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/fab_camera"
        android:src="@drawable/ic_history"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_colorRipple="@color/colorPrimaryDark"/>
</RelativeLayout>